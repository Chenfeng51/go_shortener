{
  "name": "Shorter Url",
  "description": "Try copy the current page's url and may shorten the url based on existing url shortener's rule like goLink.",
  "version": "0.0.2",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "activeTab", "clipboardWrite"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/url_shortener16.png",
      "32": "/images/url_shortener32.png",
      "48": "/images/url_shortener48.png",
      "128": "/images/url_shortener128.png"
    }
  },
  "icons": {
    "16": "/images/url_shortener16.png",
    "32": "/images/url_shortener32.png",
    "48": "/images/url_shortener48.png",
    "128": "/images/url_shortener128.png"
  },
  "options_page": "options.html",
  "commands": {
    "_execute_action": {
      "suggested_key": "Alt+C",
      "description": "Copy the url."
    }
  }
}